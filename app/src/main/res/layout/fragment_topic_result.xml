<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_result_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyCardViewStyle"
            android:visibility="visible">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тема текста"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"
                    android:text="..."
                    android:id="@+id/tv_subject_percent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="..."
                    android:id="@+id/tv_subject_text"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyCardViewStyle">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Скорость речи"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="8dp"/>
                <com.github.anastr.speedviewlib.SpeedView
                    android:id="@+id/speedView"
                    android:layout_gravity="center_horizontal"
                    app:sv_lowSpeedPercent="40"
                    app:sv_mediumSpeedPercent="60"
                    app:sv_lowSpeedColor="@android:color/holo_orange_light"
                    app:sv_mediumSpeedColor="#19ff19"
                    app:sv_highSpeedColor="@android:color/holo_orange_light"
                    app:sv_unitUnderSpeedText="true"
                    app:sv_speedTextFormat="INTEGER"
                    app:sv_unit="Слов/мин"
                    app:sv_textSize="10sp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:sv_minSpeed="20"
                    app:sv_maxSpeed="200"
                    app:sv_withTremble="false"/>
                <TextView
                    android:id="@+id/tv_speed_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyCardViewStyle">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Количество лишних слов"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"
                    tools:text="10 %"
                    android:id="@+id/tv_needless_words"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="Совет"
                    android:id="@+id/tv_needless_words_advice"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyCardViewStyle">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сложность текста"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"
                    tools:text="Текст понятен ученикам 10-11 классов школы"
                    android:id="@+id/tv_hardness"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="Совет"
                    android:id="@+id/tv_hardness_advice"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/ll_random_topic_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyCardViewStyle">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Соответствие времени"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Large"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:id="@+id/tv_prep_time_diff"
                        tools:text="Время подготовки превышено на 15 сек"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:id="@+id/tv_speech_time_diff"
                        tools:text="Время выступления на 30 сек меньше желаемого"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>