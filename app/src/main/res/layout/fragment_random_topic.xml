<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vsquad.projects.govorillo.ui.fragment.random_topic.RandomTopicFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_topic"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="How is your day?"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_switch_speaking"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:text="Start speaking"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            fancy:fb_defaultColor="#3f729b"
            fancy:fb_focusColor="#313131"
            fancy:fb_radius="200dp"
            />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_next_topic"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:text="Next topic"
            android:layout_gravity="center_horizontal"
            fancy:fb_defaultColor="#3f729b"
            fancy:fb_focusColor="#313131"
            fancy:fb_iconPaddingLeft="0dp"
            fancy:fb_iconPaddingRight="0dp"
            fancy:fb_radius="200dp"/>
    </LinearLayout>
</RelativeLayout>
