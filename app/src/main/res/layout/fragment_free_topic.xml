<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vsquad.projects.govorillo.ui.fragment.random_topic.RandomTopicFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Просто поговорите на любые темы. Старайтесь соблюдать правила устной речи."/>
        <LinearLayout
            android:id="@+id/ll_while_speaking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_speech_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:text="Время: 00:10"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center_horizontal">
            <pl.bclogic.pulsator4droid.library.PulsatorLayout
                android:id="@+id/pulsator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:pulse_count="5"
                app:pulse_duration="2000"
                app:pulse_repeat="0"
                app:pulse_color="@color/colorAccent"
                app:pulse_startFromScratch="false"
                app:pulse_interpolator="AccelerateDecelerate">
                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_switch_speaking"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:text="Начать"
                    app:fb_fontIconSize="130sp"
                    app:fb_defaultColor="#3f729b"
                    app:fb_focusColor="#313131"
                    app:fb_iconPosition="top"
                    app:fb_fontIconResource="&#xf130;"
                    app:fb_radius="180dp"
                    />
            </pl.bclogic.pulsator4droid.library.PulsatorLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
