<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyCardViewStyle">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Скорость речи"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="8dp"/>
                <com.github.anastr.speedviewlib.SpeedView
                    android:id="@+id/speedView"
                    android:layout_gravity="center_horizontal"
                    app:sv_lowSpeedPercent="40"
                    app:sv_mediumSpeedPercent="60"
                    app:sv_lowSpeedColor="@android:color/holo_orange_light"
                    app:sv_mediumSpeedColor="#19ff19"
                    app:sv_highSpeedColor="@android:color/holo_orange_light"
                    app:sv_unitUnderSpeedText="true"
                    app:sv_speedTextFormat="INTEGER"
                    app:sv_unit="Знаков/мин"
                    app:sv_unitTextSize="12sp"
                    app:sv_textSize="10sp"
                    android:layout_width="200dp"
                    android:layout_height="210dp"
                    app:sv_minSpeed="100"
                    app:sv_maxSpeed="1800"
                    app:sv_withTremble="false"/>
                <TextView
                    android:id="@+id/tv_speed_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>